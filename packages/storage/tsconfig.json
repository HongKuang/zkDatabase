{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "Node",
    "outDir": "./build/",
    "rootDir": ".",
    "types": ["node", "jest"]
  },
  "include": ["**/*.ts"],
  "exclude": [
    "build",
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    "typechain/**/*.ts"
  ]
}
