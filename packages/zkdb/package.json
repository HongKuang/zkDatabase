{
  "name": "zkdb",
  "version": "1.0.0",
  "description": "zkDatabase for the future of Web3",
  "author": "chiro@orochi.network",
  "license": "Apache-2.0",
  "keywords": [
    "zk",
    "database",
    "zk-database",
    "zkdb",
    "zkdatabase"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/orochi-network/zkDatabase.git"
  },
  "bugs": {
    "url": "https://github.com/orochi-network/zkDatabase/issues"
  },
  "homepage": "https://github.com/orochi-network/zkDatabase#readme",
  "type": "module",
  "main": "./build/src/index.js",
  "types": "./build/src/index.d.ts",
  "scripts": {
    "release": "rm -rf ./build && npm run build && npm publish --access public",
    "build": "tsc -p tsconfig.json",
    "buildw": "tsc -p tsconfig.json --watch",
    "coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "format": "prettier --write --ignore-unknown **/*",
    "prepare": "cd .. && cd .. && husky install packages/zkdb/.husky",
    "test": "node --experimental-vm-modules ../../node_modules/jest/bin/jest.js",
    "testw": "node ../../node_modules/jest/bin/jest.js --watch",
    "lint": "npx eslint ./src/**/*.ts --fix",
    "lint-check": "npx eslint ./src/**/*.ts --debug"
  },
  "typesVersions": {
    "*": {
      "*": [
        "*",
        "build/src/*"
      ]
    }
  },
  "files": [
    "build/src",
    "!**/*.tsbuildinfo",
    "!**/*.test.js",
    "!**/*.test.js.map",
    "!**/*.test.d.ts",
    "!**/*.test.d.ts.map"
  ],
  "lint-staged": {
    "**/*": [
      "eslint src/* --fix",
      "prettier --write --ignore-unknown"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/plugin-transform-modules-commonjs": "^7.23.3",
    "@babel/preset-env": "^7.23.9",
    "@babel/preset-typescript": "^7.23.3",
    "@jest/globals": "^29.7.0",
    "@shelf/jest-mongodb": "^4.2.0",
    "@types/cors": "^2.8.14",
    "@types/jest": "^29.5.12",
    "@types/mock-fs": "^4.13.3",
    "@types/node": "^20.6.0",
    "@types/uuid": "^9.0.3",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.49.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.6.3",
    "eslint-plugin-o1js": "^0.4.0",
    "husky": "^7.0.1",
    "jest": "^29.7.0",
    "jose": "^4.14.6",
    "lint-staged": "^11.0.1",
    "mock-fs": "^5.2.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.2",
    "typedoc": "^0.25.7",
    "typescript": "^5.4.3"
  },
  "peerDependencies": {
    "o1js": "^1.1.0"
  },
  "dependencies": {
    "@zkdb/api": "^1.1.0",
    "@zkdb/smart-contract": "^1.0.0",
    "detect-node": "^2.1.0",
    "graphql": "^16.9.0",
    "graphql-request": "^6.1.0",
    "jest-worker": "^29.7.0"
  }
}
