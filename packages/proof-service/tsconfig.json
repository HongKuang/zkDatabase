{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "baseUrl": "./src",
    "outDir": "./build/",
    "types": ["node", "jest"]
  },
  "include": ["**/*.ts"],
  "references": [{ "path": "../storage" }, { "path": "../smart-contract" }],
  "exclude": [
    "build",
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    "typechain/**/*.ts"
  ]
}
