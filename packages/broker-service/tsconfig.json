{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "rootDir": ".",
    "baseUrl": "src",
    "outDir": "build",
    "strict": true,
    "esModuleInterop": true
  },
  "references": [{ "path": "../storage" }],
  "include": ["**/*.ts"],
  "exclude": ["build", "node_modules", "typechain/**/*.ts"]
}